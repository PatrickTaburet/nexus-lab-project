{% extends 'base.html.twig' %}

{% block title %}New Scene D1{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/dataScene.css') }}">
{% endblock %}

{% block body %}

{# Modale : save artwork  #}
<div class="modaleBackground hidden">
    <div class="superModale hidden">
        <div class="headerModale">
            <h1>Save ArtWork</h1>
            <button class="closeButton customButton closeModaleStyle">X</button>
        </div>
        <p>Do you want to save this artwork and share it in the Gallery?</p> 
        <button id="sendDataButton" class="customButton generateButton">Save</button>
    </div>
</div>
{# End modale #}

{# ---------------------- #}

<div class="headerTitle">
    <img class="titleImg" src={{ asset("/images/design/title3.png")}} alt="Title square">
    <h1>CO2 WORLDWIDE EMISSIONS</h1>
</div>

<div class="mainContainer">

{# Left Side #}
    <div class="leftSide">
        <div class="labelBox">
            <a href="{{ path('generativeHome')}}">Data Art</a>
            <img class="LabelImg" src={{ asset("/images/design/square3.png")}} alt="Data Art">
        </div>
        <div class="descriptionBox">
            <div class="card-border">
                <div class="card ">
                    <div class="card-title">
                        Description
                    </div>
                    <img class="arrow1" src={{ asset("/images/design/arrow.png")}} alt="Description arrow">
                    <div class="separator"></div>
                    <div class="card-content">
                        <div class="descriptionContent">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Provident sapiente animi, atque fugiat, autem optio modi id sed voluptatem saepe nulla aliquam temporibus officiis consequatur amet dolorum voluptatum natus nihil.Lorem, ipsum dolor sit amet consectetur adipisicing elit. Provident sapiente animi, atque fugiat, autem optio modi id sed voluptatem saepe nulla aliquam temporibus officiis consequatur amet dolorum voluptatum natus nihil  </div>
                    </div>
                </div>
            </div>
        </div>
        <img class="CyberCircleImg" src={{asset("/images/design/circle1.png")}} alt="Cyber-circle">
        <img class="hexaImg" src={{asset("/images/design/hexa.png")}} alt="Cyber-hexagon">
    </div>

{# Sketch #}

    <div id="sketch"></div>

{# Parameters #}

    <div class="parametersBox">
        <div class="card-border">
            <div class="card ">
                <div class="card-title">
                    Control parameters
                </div>
                <div class="separator"></div>
                <div class="card-content">
                    <div class="inputBox">
                        <select name="country" class="country" id="country0" >
                            <option >{% if scene.country1 %}{{scene.country1}}{% else %}Select a country{% endif %}</option> 
                        
                        </select>
                        <select name="country" class="country" id="country1">
                            <option>{% if scene.country2 %}{{scene.country2}}{% else %}Select a country{% endif %}</option>
                        
                        </select>
                        <select name="country" class="country" id="country2">
                            <option>{% if scene.country3 %}{{scene.country3}}{% else %}Select a country{% endif %}</option>
                        
                        </select>
                        <select name="country" class="country" id="country3">
                            <option>{% if scene.country4 %}{{scene.country4}}{% else %}Select a country{% endif %}</option>
                        
                        </select>
                        <select name="country" class="country" id="country4">
                            <option>{% if scene.country5 %}{{scene.country5}}{% else %}Select a country{% endif %}</option>
                        
                        </select>
                        <select name="country" class="country" id="country5">
                            <option>{% if scene.country6 %}{{scene.country6}}{% else %}Select a country{% endif %}</option>
                        
                        </select>
                        <select name="country" class="country" id="country6">
                            <option>{% if scene.country7 %}{{scene.country7}}{% else %}Select a country{% endif %}</option>
                        
                        </select>
                        <select name="country" class="country" id="country7">
                            <option>{% if scene.country8 %}{{scene.country8}}{% else %}Select a country{% endif %}</option>
                        
                        </select>
                    </div>
                    <div class="paramBottom">
                        <div class="sliderBox">
                            <p>Randomness</p>
                            <div class="range-wrap">
                                <input type="range" class="range" id="randomSlider" min="0.001" max="0.1" value="{{scene.randomness}}" step="0.001">
                                <output class="bubble"></output>
                            </div>
                        </div>
                        <div class="checkboxContainer">
                            <p>Looping</p>
                            <input type="checkbox" id="checkboxLoop" class="checkbox" {% if scene.looping == 1 %}checked{% endif %}>
                        </div>
                        <div class="checkboxContainer">
                            <p>Abstract Flag Numbers</p>
                            <input type="checkbox" id="checkboxFlag" class="checkbox" {% if scene.abstract == 1 %}checked{% endif %}>
                        </div>
                        <div class="buttonBox"> 
                            <button id="submitButton" type="submit" class="customButton">Submit</button>
                            <button id="reloadButton" type="submit" class="customButton">Reload</button> 
                        </div>
                        {% if app.user %}
                        <div class="separator2"></div>
                        <button class="buttonModale customButton generateButton">Save</button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="dataScene" data-scene="{{ scene|json_encode }}"></div> 
</div>
{% if app.user %}
    <script>
        var userId = {{ app.user.id }};
    </script>
{% endif %}

<script defer src="{{ asset('js/sketchSceneD1.js') }}" ></script>

{% endblock %}
