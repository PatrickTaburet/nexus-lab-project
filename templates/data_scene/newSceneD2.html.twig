{% extends 'base.html.twig' %}

{% block title %}Scene D2{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/dataScene.css') }}">
{% endblock %}

{% block body %}

{# Modale : save artwork  #}

<div class="modaleBackground hidden">
    <div class="superModale hidden">
        <div class="headerModale">
            <h1>Save ArtWork</h1>
            <button class="closeButton customButton closeModaleStyle">X</button>
        </div>
        <p>Do you want to save this artwork and share it in the Gallery?</p> 
        <button id="sendDataButton" class="customButton generateButton">Save</button>
    </div>
</div>
{# End modale #}

{# ---------------------- #}

<div class="headerTitle">
    <img class="titleImg" src={{ asset("/images/design/title3.png")}} alt="Title square">
    <h1>USA, CHINA, INDIA POPULATION</h1>
</div>

<div class="mainContainer">

{# Left Side #}

    <div class="leftSide">
        <div class="labelBox">
            <a href="{{ path('generativeHome')}}">Data Art</a>
            <img class="LabelImg" src={{ asset("/images/design/square3.png")}} alt="Data Art">
        </div>
        <div class="descriptionBox">
            <div class="card-border">
                <div class="card ">
                    <div class="card-title">
                        Description
                    </div>
                    <img class="arrow1" src={{ asset("/images/design/arrow.png")}} alt="Description arrow">
                    <div class="separator"></div>
                    <div class="card-content">
                        <div class="descriptionContent">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Provident sapiente animi, atque fugiat, autem optio modi id sed voluptatem saepe nulla aliquam temporibus officiis consequatur amet dolorum voluptatum natus nihil.Lorem, ipsum dolor sit amet consectetur adipisicing elit. Provident sapiente animi, atque fugiat, autem optio modi id sed voluptatem saepe nulla aliquam temporibus officiis consequatur amet dolorum voluptatum natus nihil  </div>
                    </div>
                </div>
            </div>
        </div>
        <img class="CyberCircleImg" src={{asset("/images/design/circle1.png")}} alt="Cyber-circle">
        <img class="hexaImg" src={{asset("/images/design/hexa.png")}} alt="Cyber-hexagon">
    </div>

{# Sketch #}

    <div id="sketch"></div>

{# Parameters #}

    <div class="parametersBox">
        <div class="card-border">
            <div class="card ">
                <div class="card-title">
                    Control parameters
                </div>
                <div class="separator"></div>
                <div class="card-content">
                    <div class="paramBottom">
                        <div class="sliderBox">
                            <p>Division factor</p>
                            <div class="range-wrap">
                                <input class="divFactorSlider range" type="range" min="1" max="7" step="1" value="{{scene.divFactor}}">
                                <output class="bubble"></output>
                            </div>
                            <p>Copy</p>
                            <div class="range-wrap">
                                <input class="numCopySlider range" type="range" min="1" max="15" step="1" value="{{scene.copy}}">
                                <output class="bubble"></output>
                            </div>
                            <p>Deformation</p>
                            <div class="range-wrap">
                                <input class="deformationSlider range" type="range" min="0" max="50" step="1" value="{{scene.deformation}}">
                                <output class="bubble"></output>
                            </div>
                            <p>Size factor</p>
                            <div class="range-wrap">
                                <input class="sizeFactorSlider range" type="range" min="0.2" max="5" step="0.1" value="{{scene.sizeFactor}}">
                                <output class="bubble"></output>
                            </div>
                            <p>Division angle</p>
                            <div class="range-wrap">
                                <input class="angleDivSlider range" type="range" min="2" max="50" step="1" value="{{scene.angle}}">
                                <output class="bubble"></output>
                            </div>
                            <p>Opacity</p>
                            <div class="range-wrap">
                                <input class="opacitySlider range" type="range" min="0.01" max="1" step="0.005" value="{{scene.opacity}}">
                                <output class="bubble"></output>
                            </div>
                            <p>Filters</p>
                            <div class="range-wrap">
                                <input class="filterSlider range" type="range" min="0" max="4" step="1" value="{{scene.filters}}">
                                <output class="bubble"></output>
                            </div>
                            <p>Division</p>
                            <div class="range-wrap">
                                <input class="divSlider range" type="range" min="1" max="23" step="1" value="{{scene.division}}">
                                <output class="bubble"></output>
                            </div>
                            <div style="border: solid, 2px; padding:10px;">
                                <p>Color range</p>
                                <div class="range-wrap">
                                    <input class="colorRangeSlider range" type="range" min="-180" max="180" step="1" value="{{scene.colorRange}}">
                                    <output class="bubble"></output>
                                </div>
                                <button style="font-size: 20px; font-weight: 700;" class="colorsButton customButton">COLOR</button>
                                <div style="display: flex; gap: 20px; font-weight: 700; font-size: 30px;">
                                    <p style="color: rgb(5, 13, 242);" class="chinaColor">CHINA</p>
                                    <p style="color: rgb(255, 217, 0);" class="usaColor">USA</p>
                                    <p style="color: rgb(0, 138, 5);" class="indiaColor">INDIA</p>
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="checkboxContainer">
                                <p>GLITCH</p>
                                <input type="checkbox" id="glitchCheckbox" class="checkbox" {% if scene.glitch == 1 %}checked{% endif %}>
                            </div>
                            <div class="checkboxContainer">
                                <p>NOISE</p>
                                <input type="checkbox" id="noiseCheckbox" class="checkbox" {% if scene.noise == 1 %}checked{% endif %}>
                            </div>
                        </div>
                 
                        <div class="buttonBox"> 
                            <button id="reloadButton" type="submit" class="customButton">Reload</button> 
                        </div>
                        {% if app.user %}
                        <div class="separator2"></div>
                        <button class="buttonModale customButton generateButton">Save</button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="dataScene" data-scene="{{ scene|json_encode }}"></div> 
</div>

    <script>
        window.colorsValue = {{ scene.colorsValue is defined and scene.colorsValue is not empty ? scene.colorsValue | json_encode | raw : 'null' }};
        window.newColors = colorsValue !== 'null' ? JSON.parse(colorsValue) : null;       
        {% if app.user %}
            let userId = {{ app.user.id }};
        {% endif %}
    </script>


<script defer src="{{ asset('js/sketchSceneD2.js') }}" ></script>

{% endblock %}
