<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"><!--Permet de donner les instructions d'echelle de taille aux navigateur-->
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="{{asset('css/globalStyle.css')}}">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
   
  

    <body>
        {% if app.user %}
            <div {{ react_component('Navbar', {"props": {
                "user": app.user,
                "userImg": vich_uploader_asset(app.user, 'imageFile'),
                "username": app.user.pseudo,
                "email": app.user.email,
                "role": app.user.roles[0]       
                }}) }}>
            </div>
        {% else %}
            <div {{ react_component('Navbar', {"props": {"user": app.user}}) }}></div>
        {% endif %}
    <main>
        {% block body %}{% endblock %}
    </main>
    <footer>
        <div class="topFooter">
            <ul>
                <li>Gallery</li>
                <li>Create</li>
                <li>Community</li>
            </ul>
            <img src="" alt="logo">
             <ul>
                <li>About us</li>
                <li>Contact</li>
            </ul>
        </div>
        <div class="centerFooter">
            <img src="{{ asset('images/icons/facebook.png') }}" alt="facebook_logo">
            <img src="{{ asset('images/icons/instagram.png') }}" alt="instagram_logo">
            <img src="{{ asset('images/icons/twitter.png') }}" alt="twitter_logo">
            <img src="{{ asset('images/icons/youtube.png') }}" alt="youtube_logo">

        </div>
        <div class="bottomFooter">
            <p>© 2024 Privacy — Terms</p>
        </div>
    </footer>
    </body>
</html>
