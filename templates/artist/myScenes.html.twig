{% extends 'base.html.twig' %}

{% block title %}Artist Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/artist.css') }}">
{% endblock %}

{% block body %}
<h1 class="dashboardTitle">Admin Dashboard</h1>
<div class="dashboardContainer">
    <div class="dashboardTop">
        <div class="requestContainer">
            <h2 class="subTitle">New scene request pending</h2>
            <div class="requestContent">
                <table class="table dashboardTable">
                    <thead>
                        <th>User</th>
                        <th>Date</th>
                        <th>Action</th>
                    </thead>
                    <tbody>
                    {% for request in sceneRequests %}
                        <tr>
                            <td>{{request.user.pseudo}}</td>
                            <td>{{request.updatedAt|date('F j, Y, g:i a')}}</td>
                            <td><a href="{{path('admin_show_request', {'id' : request.id, 'entity': "AddScene"}) }}" class="customButton">Open</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
           
        </div>
    </div>
</div>
{% endblock %}
