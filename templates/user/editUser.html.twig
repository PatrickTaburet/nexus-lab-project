{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}

{# Profile form #}

    <div class="container">
          {# {% if (is_granted('ROLE_ARTIST')) %}
          {% endif %} #}
     
      <h1 class="headerUser">Edit Profile</h1>

      <div class="formUser">
        {{ form_start(userForm) }}
          
          <div class="form-group">
            {{ form_label(userForm.pseudo)}}
            {{ form_widget(userForm.pseudo, { "attr": {"class" : "form-control" } }) }}
          </div>
          <div class="form-group">
            {{ form_label(userForm.email)}}
            {{ form_widget(userForm.email, { "attr": {"class" : "form-control" } }) }}
          </div>
          <div>
          <div class="form-group">
             <div class="form-group">
            {{ form_widget(userForm.plainPassword, { "attr": {"class" : "form-control" } }) }}
          </div>
          </div>
          <div class="imagePreview">
            {{ form_label(userForm.imageFile) }}
            {{ form_widget(userForm.imageFile, { "attr": {"class" : "form-control" } }) }}
          </div>
          <div class="buttonBox">        
            {{ form_label(userForm.Submit) }}
            {{ form_widget(userForm.Submit) }}
            <a href="{{ path('home')}}"> <button  class="customButton">Back</button></a>
          </div>

        {{ form_end(userForm) }}
      </div>
    </div>

{% endblock %}
