{% extends 'base.html.twig' %}

{% block title %}Ask for Artist Role{% endblock %}

{% block body %}
  {% for message in app.flashes('warning')%}
    <div class="warningFlashMessages">
      {{message }}
    </div>
  {% endfor %}
    <h1>Add new Scene</h1>

    <div class="formUser">
        {{ form_start(form) }}
          
          <div class="form-group">
            {{ form_label(form.language)}}
            {{ form_widget(form.language, { "attr": {"class" : "form-control" } }) }}
          </div>
          <div class="form-group">
            {{ form_widget(form.otherLanguage, { "attr": {"class" : "otherLanguage" } }) }}
          </div>
          <div class="form-group">
            {{ form_label(form.title)}}
            {{ form_widget(form.title, { "attr": {"class" : "form-control" } }) }}
          </div>
          <div class="form-group">
            {{ form_label(form.description)}}
            {{ form_widget(form.description, { "attr": {"class" : "form-control" } }) }}          
          </div>
          <div class="form-group">
            {{ form_label(form.codeFile)}}
            {{ form_widget(form.codeFile, { "attr": {"class" : "form-control" } }) }}          
          </div>
          <div class="form-group">
            {{ form_label(form.imageFile)}}
            {{ form_widget(form.imageFile, { "attr": {"class" : "form-control" } }) }}          
          </div>

          <div class="buttonBox">        
            {{ form_label(form.submit) }}
            {{ form_widget(form.submit) }}
            <a href="{{ path('home')}}"  class="customButton">Back</a>
          </div>

        {{ form_end(form) }}
      </div>
    </div>

{% endblock %}
