{% extends 'base.html.twig' %}

{% block title %}New Scene{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/generative.css') }}">
{% endblock %}

{% block body %}

{# Modale : save artwork  #}

{% include 'partials/_modale_saveArtwork.html.twig' %}

{# End modale #}

{# ---------------------- #}
<div class="headerTitle">
    <img class="titleImg" src={{asset("/images/design/title2.png")}} alt="Title square">
    <h1>RANDOM LINE WALKERS</h1>
</div>

<div class="mainContainer">
    <div class="leftSide">
        <div class="labelBox">
            <a href="{{ path('generativeHome')}}">Generative <br> Art</a>
            <img class="LabelImg" src={{asset("/images/design/Title-square2.png")}} alt="Generative Art">
        </div>
        <div class="descriptionBox">
            <div class="card-border">
                <div class="card ">
                    <div class="card-title">
                        Description
                    </div>
                    <img class="arrow1" src={{asset("/images/design/arrow.png")}} alt="Description arrow">
                    <div class="separator"></div>
                    <div class="card-content">
                        <div class="descriptionContent">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Provident sapiente animi, atque fugiat, autem optio modi id sed voluptatem saepe nulla aliquam temporibus officiis consequatur amet dolorum voluptatum natus nihil.Lorem, ipsum dolor sit amet consectetur adipisicing elit. Provident sapiente animi, atque fugiat, autem optio modi id sed voluptatem saepe nulla aliquam temporibus officiis consequatur amet dolorum voluptatum natus nihil  </div>
                    </div>
                </div>
            </div>
        </div>
        <img class="CyberCircleImg" src={{asset("/images/design/circle1.png")}} alt="Cyber-circle">
        <img class="hexaImg" src={{asset("/images/design/hexa.png")}} alt="Cyber-hexagon">
    </div>
    
{# sketch #}

    <div id="sketch"></div>

{# parameters control pannel #}
    <div class="parametersBox">
        <div class="card-border">
            <div class="card ">
                <div class="card-title">
                    Control parameters
                </div>
                <div class="separator"></div>
                <div class="card-content">
                
                    {# Parameters sliders #}

                    {% set sliders = [
                        {'label': 'Hue color', 'id': 'hueSlider', 'min': 0, 'max': 360, 'value': scene.hue, 'step': 1},
                        {'label': 'Color range', 'id': 'colorRangeSlider', 'min': 0, 'max': 1200, 'value': scene.colorRange, 'step': 1},
                        {'label': 'Brightness', 'id': 'brightnessSlider', 'min': 0, 'max': 100, 'value': scene.brightness, 'step': 1},
                        {'label': 'Movement', 'id': 'moveSlider', 'min': 0, 'max': 1, 'value': scene.movement, 'step': 0.005},
                        {'label': 'Deformation A', 'id': 'deformSlider', 'min': 0, 'max': 10, 'value': scene.deformA, 'step': 0.005},
                        {'label': 'Deformation B', 'id': 'deformSlider2', 'min': 0, 'max': 10, 'value': scene.deformB, 'step': 0.005},
                        {'label': 'Shape', 'id': 'shapeSlider', 'min': 1, 'max': 10, 'value': scene.shape, 'step': 0.5},
                        {'label': 'Rings', 'id': 'ringsSlider', 'min': 0, 'max': 0.3, 'value': scene.rings, 'step': 0.0005},
                        {'label': 'Diameter', 'id': 'diameterSlider', 'min': 0.001, 'max': 2.5, 'value': scene.diameter, 'step': 0.005},
                        {'label': 'Zoom', 'id': 'zoomSlider', 'min': 0, 'max': 5, 'value': scene.zoom, 'step': 0.005}
                    ] %}

                    {% for slider in sliders %}
                        <div class="sliderBox">
                            <p>{{ slider.label }}</p>
                            <div class="range-wrap">
                                <input type="range" class="range {{ slider.id }}" id="{{ slider.id }}" min="{{ slider.min }}" max="{{ slider.max }}" value="{{ slider.value }}" step="{{ slider.step }}">
                                <output class="bubble"></output>
                            </div>
                        </div>
                    {% endfor %}

                    <div class="buttonBox">
                        <button id="resetButton" class="customButton generateButton">Reset</button>
                        {% if app.user %}
                            <button class="buttonModale customButton generateButton">Save</button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>       
    </div>

    <div id="dataScene" data-scene="{{ scene|json_encode }}"></div>

</div>
{% if app.user %}
    <script>
        let userId = {{ app.user.id }};
    </script>
{% endif %}

<script defer src="{{ asset('js/sketchSceneG2.js') }}" ></script>

{% endblock %}
