{% extends 'base.html.twig' %}

{% block title %}Scene 1{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/generative.css') }}">
{% endblock %}

{% block body %}

{# Modale : save artwork  #}

<div class="modaleBackground hidden">
    <div class="superModale hidden">
        <div class="headerModale">
            <p>Save ArtWork</p>
            <button class="closeButton customButton closeModaleStyle">X</button>
        </div>
        <p>Do you want to save this artwork and share it in the Gallery?</p> 
        <button id="sendDataButton" class="customButton generateButton">Save</button>
    </div>
</div>
{# End modale #}

{# ---------------------- #}

<div class="headerTitle">
    <img class="titleImg" src={{ asset("/images/design/title2.png")}} alt="Title square">
    <h1>RANDOM LINE WALKERS</h1>
</div>

<div class="mainContainer">

{# Left Side #}

    <div class="leftSide">
        <div class="labelBox">
            <a href="{{ path('generativeHome')}}">Generative <br> Art</a>
            <img class="LabelImg" src={{ asset("/images/design/Title-square2.png")}} alt="Generative Art">
        </div>
        <div class="descriptionBox">
            <div class="card-border">
                <div class="card ">
                    <div class="card-title">
                        Description
                    </div>
                    <img class="arrow1" src={{ asset("/images/design/arrow.png")}} alt="Description arrow">
                    <div class="separator"></div>
                    <div class="card-content">
                        <div class="descriptionContent">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Provident sapiente animi, atque fugiat, autem optio modi id sed voluptatem saepe nulla aliquam temporibus officiis consequatur amet dolorum voluptatum natus nihil.Lorem, ipsum dolor sit amet consectetur adipisicing elit. Provident sapiente animi, atque fugiat, autem optio modi id sed voluptatem saepe nulla aliquam temporibus officiis consequatur amet dolorum voluptatum natus nihil  </div>
                    </div>
                </div>
            </div>
        </div>
        <img class="CyberCircleImg" src={{asset("/images/design/circle1.png")}} alt="Cyber-circle">
        <img class="hexaImg" src={{asset("/images/design/hexa.png")}} alt="Cyber-hexagon">
    </div>
    
{# sketch #}

    <div id="sketch"></div>

{# parameters control pannel #}
    <div class="parametersBox">
        <div class="card-border">
            <div class="card ">
                <div class="card-title">
                    Control parameters
                </div>
                <div class="separator"></div>
                <div class="card-content">
                    <div class="sliderBox">
                        <p>Hue color</p>
                        <div class="range-wrap colorSlider">
                            <input type="range" class="hueSlider range" min="0" max="360" value="180" step="1">
                            <output class="bubble"></output>
                        </div>
                    </div>
                    <div class="sliderBox">
                        <p>Color range </p>
                        <div class="range-wrap">
                            <input type="range" class="colorRangeSlider range" min="0" max="1200" value="600" step="1">
                            <output class="bubble"></output>
                        </div>
                    </div>
                    <div class="sliderBox">
                        <p>Brightness</p>
                        <div class="range-wrap">
                            <input type="range" class="range brightnessSlider" min="0" max="100" value="0" step="1">
                            <output class="bubble"></output>
                        </div>
                    </div>
                    <div class="sliderBox">
                        <p>Movement</p>
                        <div class="range-wrap">
                            <input type="range" class="range moveSlider" min="0" max="1" value="0.08" step="0.005">
                            <output class="bubble"></output>
                        </div>
                    </div>
                    <div class="sliderBox">
                        <p>Deformation A</p>
                        <div class="range-wrap">
                            <input type="range" class="range deformSlider" min="0" max="10" value="0.5" step="0.005">
                            <output class="bubble"></output>
                        </div>
                    </div>
                    <div class="sliderBox">
                        <p>Deformation B</p>
                        <div class="range-wrap">
                            <input type="range" class="deformSlider2 range" min="0" max="10" value="0.5" step="0.005">
                            <output class="bubble"></output>
                        </div>
                    </div>
                    <div class="sliderBox">
                        <p>Shape</p>
                        <div class="range-wrap">
                            <input type="range" class="range shapeSlider" min="1" max="10" value="2" step="0.5">
                            <output class="bubble"></output>
                        </div>
                    </div>
                    <div class="sliderBox">
                        <p>Rings</p>
                        <div class="range-wrap">
                            <input type="range" class="range ringsSlider" min="0" max="0.3" value="0" step="0.0005">
                            <output class="bubble"></output>
                        </div>
                    </div>
                    <div class="sliderBox">
                        <p>Diameter</p>
                        <div class="range-wrap">
                            <input type="range" class="range diameterSlider" min="0.001" max="2.5" value="0.4" step="0.005"> 
                            <output class="bubble"></output>
                        </div>
                    </div>
                    <div class="sliderBox">
                        <p>Zoom</p>
                        <div class="range-wrap">
                            <input type="range" class="range zoomSlider" min="0" max="5" value="1" step="0.005">
                            <output class="bubble"></output>
                        </div>
                    </div>
                    <div class="buttonBox">
                        <button id="resetButton" class="customButton generateButton">Reset</button>
                        {% if app.user %}
                            <button class="buttonModale customButton generateButton">Save</button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>       
    </div>
    
    <div id="dataScene" style="display:none" ></div>

</div>
{% if app.user %}
    <script>
        var userId = {{ app.user.id }};
    </script>
{% endif %}
 
<script src="{{ asset('js/sketchSceneG2.js') }}"></script>

{% endblock %}
