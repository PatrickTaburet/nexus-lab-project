{% extends 'base.html.twig' %}

{% block title %}gallery{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/gallery.css') }}">
{% endblock %}

{% block body %}

<div class="mainContainer">
    <h1>GALLERY</h1>
    <div class="cardsContainer">
         {% for scene in scenes %}
            <div class="card">
                <img style="max-width: 400px" src="{{ vich_uploader_asset(scene, 'imageFile') }}" alt="{{ scene.user.pseudo }}">
                <button class="customButton dataButton"><a href="{{ path('newScene', {'id': scene.id})}}"> Open scene with parameters</a> </button>
            </div>
        {% endfor %}
         {% for scene in scenes2 %}
            <div class="card">
                <img style="max-width: 400px" src="{{ vich_uploader_asset(scene, 'imageFile') }}" alt="{{ scene.user.pseudo }}">
                <button class="customButton dataButton"><a href="{{ path('newScene', {'id': scene.id})}}"> Open scene with parameters</a> </button>
            </div>
        {% endfor %}
    </div>
   


</div>

{% endblock %}
