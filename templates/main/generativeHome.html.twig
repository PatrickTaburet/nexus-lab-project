{% extends 'base.html.twig' %}

{% block title %}Generative Art{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/create.css') }}">
{% endblock %}

{% block body %}
  <h1>Generative Art</h1>
  <p>Choose a scene</p>
  <div class="scenesContainer">
      <a href="{{ path('sceneG1')}}"><div class="optionContainer customButton">Scene 1</div></a>
      <a><div class="optionContainer customButton">Incoming</div></a>
      <a ><div class="optionContainer customButton">Incoming</div></a>
  </div>
 <div class="bottomContainer">

    {% if (is_granted('ROLE_ARTIST')) %}
      <div {{ react_component('MyButtonTwig', {"props": {
                    "myStyle":"",
                    "to":"/artist/add-new-scene",
                    "children" : "Add scene"
            }}) }}>
      </div>
      {% else %}
      <div {{ react_component('MyButtonTwig', {"props": {
                  "myStyle":"",
                  "to": app.user ? "/profile/roleRequest" : "/login",
