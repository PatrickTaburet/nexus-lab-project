<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"><!--Permet de donner les instructions d'echelle de taille aux navigateur-->
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="{{asset('css/globalStyle.css')}}">
            <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css" rel="stylesheet">
        
        {% endblock %}

    </head>
    <body>
     <!-- Header -->
        {% block header %}
            {% if app.user %}
                <div {{ react_component('Navbar', {"props": {
                    "user": app.user,
                    "userId": app.user.id, 
                    "userImg": vich_uploader_asset(app.user, 'imageFile'),
                    "username": app.user.pseudo,
                    "email": app.user.email,
                    "role": app.user.roles       
                    }}) }}>
                </div>
            {% else %}
                <div {{ react_component('Navbar', {"props": {"user": app.user}}) }}></div>
            {% endif %}
        {% endblock %}

    <!-- Loading SVG screen -->
        {{ include("./partials/_loaderScreen.svg.html.twig") }}
        
    <!-- Main pages content -->
        <main>
            {% for message in app.flashes('success')%}
                <div class="succesFlashMessages">
                    {{message}}
                </div>      
            {% endfor %}
            {# {% for message in app.flashes('error')%}
                <div class="warningFlashMessages">
                    {{message}}
                </div>      
            {% endfor %} #}
            {% for message in app.flashes('warning')%}
                <div class="warningFlashMessages">
                {{message|nl2br }}
                </div>
            {% endfor %}
            
            {% block body %}
        
            
            {% endblock %}
        </main>
 
    <!-- Footer -->
        {% block footer %}
           {{ include("./partials/_footer.html.twig") }}
        {% endblock %}
   
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/js/lightbox.min.js"></script>
            <script>
                // Loading image script
                window.addEventListener('load', function() {
                    var loadingScreen = document.getElementById('loadingScreen');
                    loadingScreen.style.display = 'none';
                });
            </script>
        {% endblock %}
    </body>

</html>
