{% extends 'base.html.twig' %}

{% block title %}Collective Drawing{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/collectiveDrawing.css') }}">
{% endblock %}

{% block body %}

<div class="headerTitle">
    {# <img class="titleImg" src={{ asset("/images/design/title3.png")}} alt="Style element title square"> #}
    <h1>Collective Drawing</h1>
</div>

<!-- Toolbar -->
<div id="toolbar">
<button onclick="setSelectionMode()">🖱️ Select</button>
    <button onclick="setBrush()">🖌 Brush</button>
    <button onclick="setEraser()">🧽 Eraser</button>
    <button onclick="addRectangle()">⬛ Rectangle</button>
    <button onclick="addCircle()">⚫ Circle</button>
    <button id="undo" disabled>↩️ Undo</button>
    <button id="redo" disabled>↪️ Redo</button>
    <button onclick="clearCanvas()">🗑 Erased All</button>
    <input type="color" id="backgroundColorPicker">
</div>

<!-- Canvas -->
<canvas id="drawingCanvas"></canvas>

<script src="https://cdn.jsdelivr.net/npm/fabric@latest/dist/index.min.js"></script>
<script defer src="{{ asset('js/fabricSettings.js') }}" ></script>

{% endblock %}
