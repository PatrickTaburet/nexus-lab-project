{% extends 'base.html.twig' %}

{% block title %}Collective Drawing{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/collectiveDrawing.css') }}">
{% endblock %}

{% block body %}

<div class="headerTitle">
    <img class="titleImg" src={{ asset("/images/design/title3.png")}} alt="Style element title square">
    <h1>Collective Drawing</h1>
</div>

<div class="mainContainer">
    <div class="sandbox-container">

        {# Canvas #}

        <div class="canvas-container">
            <canvas id="drawingCanvas"></canvas>
            <div class="canvas-bottom">
                <div>
                    <button id="zoomOutButton" class="customButton">-</button>
                    <span>Zoom</span>
                    <button id="zoomInButton" class="customButton">+</button>
                </div>
            <button id="saveImageButton" class="customButton">Save drawing</button>
            </div>
        </div>

{# Parameters #}

        <!-- Toolbar -->
        <div class="parametersBox">
            <div class="card-border">
                <div class="card ">
                    <div class="card-title">
                        Control parameters
                    </div>
                    <div class="separator"></div>
                    <div class="card-content" id="card-contentD2">
                        {# <div id="toolbar"> #}
                            <button class="tool-btn customButton" id="selectButton">üñ±Ô∏è Select</button>
                            <div class="brush-btn-box">
                                <div class="btn-top-box">
                                    <button class="tool-btn customButton" id="brushButton">üñå Brush</button>
                                    <input type="color" id="brushColorPicker">
                                    
                                    <div class="inputBox">
                                        <select id="brushStyle">
                                            <option value="solid">Solid</option>
                                            <option value="dotted">Dotted</option>
                                            <option value="dashed">Dashed</option>
                                            <option value="glow">Glow</option>  
                                        </select>
                                    </div>
                                </div>
                                <div class="sliderBox">
                                <div class="range-wrap">
                                    <input type="range" class="range" id="brushSizeSlider"  min="1" max="20" value="5" step="1">
                                        <output class="bubble"></output>
                                    </div>
                                </div>
                            </div>
                            {# <div class="eraser-btn-box">
                                <button class="tool-btn" id="eraserButton">üßΩ Eraser</button>
                                <input type="range" class="range-slider" id="eraserSlider" min="1" max="30" value="10" step="1">
                            </div> #}
                            <div class="text-btn-box">
                                <div class="btn-top-box">
                                    <button class="text-btn customButton" id="textButton">Add Text</button>
                                    <input type="color" id="textColorPicker">
                                </div>
                                <input type="text" id="textInput">
                            </div>
                            <div class="img-btn-box">
                                <input type="file" id="imageInput" accept="image/*">
                                <button class="img-btn customButton" id="imageButton">Add Image</button>
                            </div>
                            <div class="shapes-btn-container">
                                <div class="shapes-btn-box">
                                    <button class="toolbar-btn customButton" id="rectangleButton">‚¨õ Rectangle</button>
                                    <button class="toolbar-btn customButton" id="circleButton">‚ö´ Circle</button>
                                    <button class="toolbar-btn customButton" id="triangleButton">‚ñ≤ Triangle</button>
                                    <button class="toolbar-btn customButton" id="lineButton">üìè Line</button>
                                </div>
                                <input type="color" id="shapesColorPicker">
                            </div>

                            <button class="toolbar-btn customButton" id="undo" disabled>‚Ü©Ô∏è Undo</button>
                            <button class="toolbar-btn customButton" id="redo" disabled>‚Ü™Ô∏è Redo</button>
                            <button class="toolbar-btn customButton" id="clearCanvasButton">üóë Erased All</button>
                            <div class="background-btn-box">
                                <span>Background</span>
                                <input type="color" id="backgroundColorPicker">
                                <div>
                                    <input type="checkbox" id="alphaCheckbox"> 
                                    <span>Alpha</span>
                                </div>
                            </div>
                        {# </div> #}
                    </div>
                </div>
            </div>
        </div>        
    </div>
<div>
<script src="https://cdn.jsdelivr.net/npm/fabric@latest/dist/index.min.js"></script>
<script defer src="{{ asset('js/fabricSettings.js') }}" ></script>

{% endblock %}
