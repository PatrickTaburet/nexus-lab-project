{% extends 'base.html.twig' %}

{% block title %}Collective Drawing{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/collectiveDrawing.css') }}">
{% endblock %}

{% block body %}

<div class="headerTitle">
    {# <img class="titleImg" src={{ asset("/images/design/title3.png")}} alt="Style element title square"> #}
    <h1>Collective Drawing</h1>
</div>

<div class="sandbox-container">
    <!-- Canvas -->
    <div class="canvas-container">
        <canvas id="drawingCanvas"></canvas>
    </div>

    <!-- Toolbar -->
    <div id="toolbar">
        <button class="tool-btn" id="selectButton">üñ±Ô∏è Select</button>
        <div class="brush-btn-box">
            <div class="btn-top-box">
                <button class="tool-btn" id="brushButton">üñå Brush</button>
                <input type="color" id="brushColorPicker">
                <select id="brushStyle">
                    <option value="solid">Solid</option>
                    <option value="dotted">Dotted</option>
                    <option value="dashed">Dashed</option>
                    <option value="glow">Glow</option>
                </select>
            </div>
            <input type="range" class="range-slider" id="brushSizeSlider" min="1" max="20" value="5" step="1">
        </div>
        <div class="eraser-btn-box">
            <button class="tool-btn" id="eraserButton">üßΩ Eraser</button>
            <input type="range" class="range-slider" id="eraserSlider" min="1" max="30" value="10" step="1">
        </div>
        <div class="text-btn-box">
            <div class="btn-top-box">
                <button class="text-btn" id="textButton">Add Text</button>
                <input type="color" id="textColorPicker">
            </div>
            <input type="text" id="textInput">
        </div>
        <div class="img-btn-box">
            <button class="img-btn" id="imageButton">Add Image</button>
            <input type="file" id="imageInput" accept="image/*">
        </div>
        <div class="shapes-btn-container">
            <div class="shapes-btn-box">
                <button class="toolbar-btn" id="rectangleButton">‚¨õ Rectangle</button>
                <button class="toolbar-btn" id="circleButton">‚ö´ Circle</button>
                <button class="toolbar-btn" id="triangleButton">‚ñ≤ Triangle</button>
                <button class="toolbar-btn" id="lineButton">üìè Line</button>
            </div>
            <input type="color" id="shapesColorPicker">
        </div>

        <div>
            <input type="checkbox" id="mirrorMode">
            Symmetry Mode
        </div>
        <button class="toolbar-btn" id="undo" disabled>‚Ü©Ô∏è Undo</button>
        <button class="toolbar-btn" id="redo" disabled>‚Ü™Ô∏è Redo</button>
        <button class="toolbar-btn" id="clearCanvasButton">üóë Erased All</button>
        <div class="background-btn-box">
            <span>Background</span>
            <input type="color" id="backgroundColorPicker">
            <div>
                <input type="checkbox" id="alphaCheckbox"> 
                <span>Alpha</span>
            </div>
        </div>
    </div>
</div>
<button id="saveImageButton">Save drawing</button>

<script src="https://cdn.jsdelivr.net/npm/fabric@latest/dist/index.min.js"></script>
<script defer src="{{ asset('js/fabricSettings.js') }}" ></script>

{% endblock %}
